{
    "$schema": "https://json.schemastore.org/web-manifest",
    "name": "krsz.me - an epic url shortener",
    "short_name": "krsz.me",
    "start_url": "/",
    "display": "minimal-ui",

    "icons": [
        {
            "src": "/android-chrome-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "/android-chrome-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],

    "background_color": "#ffffff",

    "share_target": {
        "action": "/create",
        "method": "GET",
        "params": {
            "url": "url",
            "text": "url"
        }
    }
}
